@model IEnumerable<CoverType>

<div class="container rounded border mt-5 p-3">

    <div class="row px-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary "><i class="bi bi-plus-circle"></i>&nbsp; Add Cover Type</a>
        </div>
    </div>

    <div class="row p-4 border-top">
        <table class="table table-striped table-hover">

            <thead>
                <tr>
                   
                    <th>
                        Display Order
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <div class="w-55 btn-group">
                                <a class="btn btn-primary mx-2" asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"> Edit</i></a>
                                <a class="btn btn-danger mx-2" asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{

    <script>

    </script>

}