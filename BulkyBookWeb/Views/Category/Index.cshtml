@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<h1>Index Category</h1>


<div class="container p-3">

    <div class="row px-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary "><i class="bi bi-plus-circle"></i>&nbsp; Add Category</a>
        </div>
    </div>

    <div class="pt-3">
        <table class="table table-bordered table-striped " style="width:100%">

            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.DIsplayOrder
                        </td>
                        <td>
                            @item.CreatedDateTime
                        </td>
                        <td>
                            <div class="w-55 btn-group">
                                <a  class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id = "@item.id"><i class="bi bi-pencil-square"> Edit</i></a>
                                <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@item.id"><i class="bi bi-trash3"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    
    <script>
        
    </script>
    
}